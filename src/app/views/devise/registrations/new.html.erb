<%= provide(:title, "会員登録") %>

<%= form_for(resource, as: resource_name, html: { class:" w-4/5 mx-auto  my-5" }, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-5 mx-auto">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"border p-0.5 w-full" %>
  </div>

  <div class="field my-5 mx-auto">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border p-0.5 w-full" %>
  </div>

  <div class="field my-5 mx-auto date_select_wrapper">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, selected: Date.new(1990, 1, 1) , start_year: 1920, end_year: Time.now.year, autofocus: true, autocomplete: "birthday", class:"border p-0.5 w-full" %>日
  </div>


  <div class="field my-5 mx-auto">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"border p-0.5 w-full" %>
  </div>

  <div class="field my-5 mx-auto">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border p-0.5 w-full" %>
  </div>

  <div class="actions my-6 mx-auto">
    <%= f.submit "仮登録メール送信", class:"block mx-auto" %>
    
  </div>
<% end %>

<p class="text-center mx-0 mb-2">すでに登録済みの方は
<%= link_to "こちら", new_session_path(resource_name), class:"underline" %><br />
</p>

  <p class="text-center mx-0 mb-2">仮登録メールを再送したい場合は
<%= link_to "こちら", new_confirmation_path(resource_name), class:"underline" %><br />
</p>