<%= provide(:title, @user.name ) %>

  <div class="wrapper">
    <div class="inner-wrapper">
      <div class="flex justify-between items-end">
        <%= render "shared/user_image", { image: @image, size: 20 } %>    
        <%= link_to edit_user_path(@user), class:"" do %>
          <p>編集<i class="far fa-edit ml-1"></i></p>
        <% end %>
      </div>
      <p class="font-bold mt-4"><%= @user.name %></p>
      <p><%= @user.birthday %></p>
      <p class="break-words"><%= @user.profile %></p>
    </div>
  </div>

  <%= render "shared/frames", frames: @frames %>
